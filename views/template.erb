            <div class="content-wrap display-none">
            </div>
        </div>
        <div class="pure-u-1 pure-u-sm-1-3">
            <h2 class="switch"><i class="fa fa-cog"></i> Other</h2>
            <div class="content-wrap display-none">
            </div>
        </div>
<% elsif @path == 'work' %>
<% end %>
    </div>
</div>

